@using SmartPanTask.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginMain.cshtml";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "p-a30 dez-form", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 class="form-title m-t0">Use a local account to log in.</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label>
                    <input id="RememberMe" name="RememberMe" value="true" type="checkbox" checked />
                    <label for="RememberMe"> RememberMe</label>
                </label>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Log in" class="btn btn-default site-button m-r5" />
            </div>
}
<div class="bg-primary p-a15 bottom"> <a href="~/Account/Register" class="text-white">Create New Account</a> </div>


